{
  "name": "vscode-pgn-viewer",
  "displayName": "PGN Viewer",
  "description": "Displays Portable Game Notation files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Motivesoft/vscode-pgn-viewer.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "vscode-pgn-viewer.helloWorld",
        "title": "Hello World"
      }
    ],
    "customEditors": [
      {
        "viewType": "vscode-pgn-viewer.readonlyView",
        "displayName": "PGN Viewer",
        "selector": [
          {
            "filenamePattern": "*.pgn"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run copy-files && npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "postinstall": "npm run copy-files",
    "copy-files": "copyfiles -f ./node_modules/@mliebelt/pgn-viewer/lib/dist.js dist/",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@mliebelt/pgn-viewer": "^1.6.10",
    "@vscode/test-web": "^0.0.63"
  }
}
